    <input type="submit">
    <script>
         let data = async () => {
            let req = await fetch(`http://localhost:9999/catapi`)
            let res = await req.json();
            // console.log(img);
            let temp = ``;
            for (let i = 0; i < res.length; i++) {
                let id = res[i]._id
                let catname = res[i].catname
                // console.log(img);
                temp += ` <option value="${id}">${catname}</option>`
            }
            document.getElementById('select').innerHTML = temp
            
        }
        data()
        let productNo = localStorage.getItem('cartNumber')
        document.getElementById('numbercount').innerText = productNo
        
    </script>
</form>